#!/usr/bin/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Start MCP server for Home Assistant integration
# ==============================================================================

# Check if MCP is enabled
if ! bashio::config.true 'mcp_enabled'; then
    bashio::log.info "MCP server is disabled in configuration"
    # Sleep forever to keep service running but idle
    exec sleep infinity
fi

bashio::log.info "Starting MCP server for Home Assistant API access..."

# Check if Python 3 is available
if ! command -v python3 &> /dev/null; then
    bashio::log.error "Python 3 is not installed"
    exit 1
fi

# Make sure the MCP server script is executable
chmod +x /usr/local/bin/ha_mcp_server.py

# Get MCP configuration from add-on options
MCP_PORT=$(bashio::config 'mcp_port')
MCP_HOST=$(bashio::config 'mcp_host')
export MCP_PORT="${MCP_PORT:-8099}"
export MCP_HOST="${MCP_HOST:-127.0.0.1}"

bashio::log.info "MCP server will listen on ${MCP_HOST}:${MCP_PORT}"
if [[ "${MCP_HOST}" == "0.0.0.0" ]]; then
    bashio::log.warning "=========================================="
    bashio::log.warning "SECURITY WARNING: MCP server configured for external access!"
    bashio::log.warning "MCP server is listening on ALL network interfaces (0.0.0.0)"
    bashio::log.warning "This exposes Home Assistant API control externally"
    bashio::log.warning "Ensure you have:"
    bashio::log.warning "  - Proper firewall rules in place"
    bashio::log.warning "  - Network access controls configured"
    bashio::log.warning "  - Understanding of security implications"
    bashio::log.warning "For internal use only, set mcp_host to '127.0.0.1'"
    bashio::log.warning "=========================================="
elif [[ "${MCP_HOST}" == "127.0.0.1" ]] || [[ "${MCP_HOST}" == "localhost" ]]; then
    bashio::log.info "MCP server is configured for localhost access only (secure)"
else
    bashio::log.warning "MCP server is listening on ${MCP_HOST}"
    bashio::log.warning "Verify this is the intended network interface"
fi
bashio::log.info "MCP server provides Home Assistant API access via JSON-RPC"

# Start the MCP server
exec python3 /usr/local/bin/ha_mcp_server.py
